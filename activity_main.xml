<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/SourceTextView"
        android:layout_width="136dp"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="20dp"
        android:text="00"
        android:textColor="@color/grey"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.157"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />
    <TextView
        android:id="@+id/ResultTextView"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="00"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/SourceTextView" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        android:id="@+id/guideline1"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <!-- Tombol-tombol kalkulator -->

    <Button
        android:id="@+id/button8"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginBottom="256dp"
        android:text="8"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toEndOf="@id/button7"
        tools:layout_editor_absoluteX="117dp"

        />

    <Button
        android:id="@+id/buttonkali"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="36dp"
        android:text="x"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toEndOf="@id/guideline2" />

    <Button
        android:id="@+id/button0"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="160dp"
        android:layout_height="63dp"
        android:layout_marginBottom="36dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/button3"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="112dp"
        android:text="3"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toStartOf="@id/guideline1" />

    <Button
        android:id="@+id/buttonbagi"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="112dp"
        android:text="/"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/guideline2" />

    <Button
        android:id="@+id/button1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginBottom="112dp"
        android:text="1"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/button2"
        />

    <Button
        android:id="@+id/button4"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginBottom="184dp"
        android:text="4"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/button5"
        tools:layout_editor_absoluteX="37dp" />

    <Button
        android:id="@+id/button5"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/button8" />

    <Button
        android:id="@+id/button6"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="184dp"
        android:text="6"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toStartOf="@id/guideline1" />

    <Button
        android:id="@+id/buttonkurang"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginBottom="184dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toEndOf="@id/button6"
        tools:layout_editor_absoluteX="293dp" />

    <Button
        android:id="@+id/button7"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="256dp"
        android:text="7"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toStartOf="@id/guideline3" />

    <Button
        android:id="@+id/buttonresult"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="="
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toEndOf="@id/guideline2" />

    <Button
        android:id="@+id/buttontambah"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="256dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/guideline2" />

    <Button
        android:id="@+id/button9"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="256dp"
        android:text="9"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintStart_toStartOf="@id/guideline1" />

    <Button
        android:id="@+id/button2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="80dp"
        android:layout_height="63dp"
        android:layout_marginBottom="112dp"
        android:text="2"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@id/guideline02"
        app:layout_constraintEnd_toStartOf="@id/guideline1"
        tools:layout_editor_absoluteX="117dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="323dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.97" />


</androidx.constraintlayout.widget.ConstraintLayout>